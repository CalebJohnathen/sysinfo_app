<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cpu_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:tint="#ffffff"
            app:srcCompat="@drawable/ic_cpu"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/coreNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="Core 1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/freq_cpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 MHz"
            android:textColor="#ffffff" />

        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/cpu_progress"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            app:progress_text_color="@color/colorPrimary"
            app:progress_reached_color="@color/colorPrimary"
            android:minHeight="5dp"
            app:progress_text_size="12sp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>